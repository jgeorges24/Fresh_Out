<h1> login page </h1>


<%= form_with(scope: :user, url: login_path) do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %> <br>
    <%= f.label :password %>
    <%= f.password_field :password %> <br>
    <%= f.submit "Log In" %>
<% end %>

<% if @user.errors.any? %>
<div id="error_explanation">
<h2><%= pluralize(@user.errors.count, "error") %> caused this Mixtape from being saved:</h2>

<ul>
  <% @user.errors.each do |error| %>
    <li><%= error.full_message %></li>
  <% end %>
</ul>
</div>
<% end %>